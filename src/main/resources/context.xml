<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="t1000" class="Robot.ModelT1000" name="t1000">
        <!--<constructor-arg ref="sonyHand"/>-->
        <!--<constructor-arg ref="sonyLeg"/>-->
        <!--<constructor-arg ref="sonyHead"/>-->
        <!--<property name="hand" ref="sonyHand"/>-->
        <property name="hand" ref="toshibaHand"/>
        <property name="leg" ref="toshibaLeg"/>
        <property name="head" ref="toshibaHead"/>
    </bean>


    <bean id="sonyHand" class="sony.SonyHand" name="sonyHand"/>
    <bean id="sonyHead" class="sony.SonyHead" name="sonyHead"/>
    <bean id="sonyLeg" class="sony.SonyLeg" name="sonyLeg"/>
    <bean id="toshibaHand" class="toshiba.ToshibaHand" name="toshibaHand"/>
    <bean id="toshibaHead" class="toshiba.ToshibaHead" name="toshibaHead"/>
    <bean id="toshibaLeg" class="toshiba.ToshibaLeg" name="toshibaLeg"/>
</beans>